{
  "name": "react-gift-spinner",
  "version": "1.0.0",
  "description": "A customizable and interactive prize wheel/spinner component for React",
  "author": "Alireza Azizi",
  "license": "MIT",
  "keywords": [
    "react",
    "spinner",
    "prize wheel",
    "wheel of fortune",
    "gift",
    "animation",
    "component",
    "svg"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "spinner.png"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alirezaazizi145/react-gift-spinner.git"
  },
  "bugs": {
    "url": "https://github.com/alirezaazizi145/react-gift-spinner/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir dist/esm --module esnext",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .tsx --ext .ts ./src",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "sideEffects": [
    "*.css"
  ]
}
